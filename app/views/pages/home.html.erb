<section id="section-jumbotron" class="jumbotron jumbotron-fluid text-white d-flex justify-content-center align-items-center">
  <div class="container text-center">
    <div class="col-md-6 text-left">
      <h2>Locomotive</h2>
      <h4>Donnez de la vitesse à vos projets</h4>
      <%= link_to search_path, class: "btn btn-info" do %>
      Découvrez nos articles
      <% end %>
<!--
      <% if user_signed_in? %>
      <div class="hidden-desktop">
      <%= link_to "Les articles autour de vous", slide_path, class:"btn btn-info" %>
      </div>
      <% end %>
    -->
    <br><br>
  </div>
  <div class="col-md-3 ">
  </div>
  <div class="col-md-3 ">
    <div class="box-shadow">
     <% if !user_signed_in? %>
     <section>
        <h5><%= image_tag "signup.png", heigth:75, width: 55 %>Rester informé</h5>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
<!--
        <%= f.text_field :pseudo, autofocus: true, placeholder: "Pseudo",:class=>"input-small" %><br><br>
-->
        <div class="form-group">
          <%= f.text_field :address, placeholder: "Addresse postale", id:"user_input_autocomplete_address", :class=>"input-small" %>
          <input id="street_number" name="street_number" disabled type="hidden">
          <input id="route" name="route" disabled type="hidden">
          <input id="locality" name="locality" disabled type="hidden">
          <input id="country" name="country" disabled type="hidden">
        </div>

<!--
        Articles pouvant m'interesser:
        <div class="col-xs-1">
         0 km
       </div>
       <div class="col-xs-7">
        <%= f.range_field :distance, :in => 0..1000, :step => '25' %>
      </div>
      <div class="col-xs-1">
       1000 kms
     </div><br><br>
-->


     <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "adresse email", :class=>"input-small" %><br>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Créer un mot de passe", :class=>"input-small" %>
    </div>
    <div><%= f.submit "S'inscrire gratuitement",class: "btn btn-info"  %></div><br>
    <% end %>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <strong><%= image_tag "seller.png", heigth:35, width: 25 %> <%= link_to "Devenir vendeuse", devenir_vendeuse_path %><br />
    </strong>

    <% end -%>
    <% end %>
  </div>
</div>
</section>
</div>
<div class="container">
  <div class="row text-center">
    <div class="col-xs-12">
      <p>Triari nullo perdiscere ille eius inquam dissentientium ut in quo disputando inquam ut quae solent tum dicas a potest cum.</p>
    </div>
  </div>
  <% if user_signed_in? %>
  <div class="row">
    <%= render "proximityarticles" %>
  </div>
  <% else %>
  <div class="row">
    <%= render "lastarticles" %>
  </div>
  <% end %>
  <div class="row">
    <%= render "asidecaroussel" %>
  </div>
</div>
</div>
