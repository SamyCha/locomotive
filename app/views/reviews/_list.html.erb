<% if @reviews.count == 0 %>
<div class="text-center">
  <h5>Aucun commentaire pour l'instant</h5>
</div>
<% else %>
<% @reviews.order("id desc").each do |r| %>

<div class="row text-left">
  <div class="col-xs-12">
    <%= image_tag avatar_url(r.user), class: "img-circle avatar-small" %>
    <strong><%= r.user.pseudo %></strong> (<%= r.created_at.strftime("%d.%m.%y") %>)
  </div>
</div>
<div class="row text-left">
  <div class="col-xs-9">
   <%= r.comment %>
 </div>
 <div class="col-xs-3">
  <%= link_to "Supprimer", [@product, r], class: "btn btn-success", method: :delete, data: {confirm: "Etes-vous sÃ»r?"} if current_user && current_user == r.user %>
</div>
<hr>
</div>
<% end %>
<% end %>

