<section id="section-jumbotron" class="jumbotron jumbotron-fluid text-white d-flex justify-content-center align-items-center">
  <div class="container-fluid">
   <div class="row">
    <div class="col-md-3">
      <ul class="sidebar-list">
        <li class="sidebar-item"><i class="fa fa-female" aria-hidden="true"></i> <%= link_to "Mes articles en vente", products_path,
          class: "sidebar-link active" %></li>
          <li class="sidebar-item"><i class="fa fa-money" aria-hidden="true"></i>
           <%= link_to "Mes ventes", your_reservations_path,
           class: "sidebar-link" %></li>
           <li class="sidebar-item">
            <%= link_to new_product_path do %>
            <i class="fa fa-plus-circle" aria-hidden="true"></i> Ajouter un article à la boutique
            <% end %></li>
          </ul>
        </div>
        <div class="col-md-9">
          <% @products.each do |product| %>
          <% if product.status != true %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="panel panel-default box-shadow">
              <div class="panel-heading preview">
                <%= image_tag product.photos[0].image.url, style: 'height:120px;width:228px' if product.photos.length > 0  %>
              </div>
              <div class="panel-body">
                <div class="col-xs-12 text-center">
                  <h5><%= link_to product.name, product %></h5><%= image_tag "brand.png", heigth:12, width: 24 %> <%= product.brand %><br>
                  ref. <%= product.id %> <br>
                  <hr>
                </div>
                <div class="row">
                  <div class="col-xs-12">
                    <% if product.active? %>
                    <span class="label label-success">article en vente</span>
                    <% else %>
                    <span class="label label-default">en cours de publication</span>
                    <% end %>
                  </div>
                </div>
                update: <%= product.updated_at  %>
                <%= link_to "Modifier", edit_product_path(product), class:"btn btn-info" %><br><br>
                <%= link_to "Supprimer", products_path(product), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer l'article? Cela supprimera aussi vos conversations avec les acheteurs" }, class:"btn btn-info" %><br><br>
                <%= link_to "Article vendu", edit_product_path(product), class:"btn btn-info" %>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
