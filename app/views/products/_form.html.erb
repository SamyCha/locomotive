  <!-- Formulaire de réservation -->
  <%= render 'shared/errors' %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <i class="fa fa-plus-circle" aria-hidden="true"></i>
      Renseignez votre projet
    </div>
    <div class="panel-body">
      <div class="container-fluid">
        <%= form_for @product, html: {multipart: true} do |f| %>
        <div class="panel-heading">
          <h5>Détails projet:</h5>
        </div>
        <div class="row">
          <div class="col-xs-4">
            <div class="form-group">
              <label>Nom du projet (max. 20 caractères)</label>
              <%= f.text_field :name, placeholder: "Nom du projet", class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-4">
            <label>Secteur d'activité</label>
            <%= f.select :sector, ["Artistique", "Tourisme", "BTP", "Services", "Transport"], prompt: "A sélectionner...", class: "form-control" %>
          </div>
          <div class="col-xs-4">
            <label>url du projet</label>
            <%= f.text_field :project_url, placeholder: "wwww.xxx.heroku-app.com", class: "form-control" %>
          </div>

        </div>
        <div class="row">
          <div class="col-xs-6">
            <div class="form-group">
              <label>Description du projet (max. 120 caractères)</label>
              <%= f.text_area :description, rows:2, placeholder: "Décrivez le produit", class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="form-group">
              <label>Faites connaître vos attentes auprés des utilisateurs</label>
              <%= f.text_area :objectives, rows:2, placeholder: "décrire vos attentes", class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
           <label>Ajouter des Tags à votre projet</label>
            <% for category in Category.all %>
            <div>
              <p><%= check_box_tag "product[category_ids][]", category.id, @product.categories.include?(category) %>
              <%= category.name %></p>
            </div>
            <% end %>
          </div>
        </div>


        <div class="panel-heading">
         <h5> Communiquer sur le projet:</h5>
       </div>
       <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <label>Identifiant vidéo Youtube</label>
            <%= f.text_field :youtube_id, class: "form-control" %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="form-group">
            <label>Demarrage de la vidéo (en secondes)</label>
            <div class="input-group">
              <%= f.text_field :youtube_startsecond, placeholder: "720", class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
      <div class="panel-heading">
       <h5> Developpement:</h5>
     </div>
     <div class="row">
      <div class="col-xs-4">
        <div class="form-group">
          <label>Framework utilisé</label>
          <%= f.select :framework, ["Ruby on Rails", "React", "Angular", "Vue.js", "Node.js", "Django"], id: "home_type", prompt: "A sélectionner...", class: "form-control" %>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="form-group">
          <label>Nombre de developpeur sur le projet</label>
          <%= f.select :number_of_developper, ["1", "2", "3", "4", "5 ou plus"], id: "home_type", prompt: "A sélectionner...", class: "form-control" %>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="form-group">
          <label>Durée de developpement du projet</label>
          <%= f.select :devolpement_duration, ["1 semaine", "2 semaines", "3 semaines", "4 semaines", "plus de 4 semaines"], id: "home_type", prompt: "A sélectionner...", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-4">
        <div class="form-group">
          <label>Profil Github du developpeur</label>
          <div class="input-group">
            <%= f.text_field :github, placeholder: "https://github.com/XXXXX", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="form-group">
          <label>Adresse ou le projet à été développé</label>
          <%= f.text_field :address, placeholder: "Où est situé votre article ?", id:"user_input_autocomplete_address", class: "form-control" %>
          <input id="street_number" name="street_number" disabled type="hidden">
          <input id="route" name="route" disabled type="hidden">
          <input id="locality" name="locality" disabled type="hidden">
          <input id="country" name="country" disabled type="hidden">
        </div>
      </div>

      <div class="col-xs-4">
        <div class="form-group">
          <label> Bootcamp du developpement</label>
          <%= f.select :developped_at, ["le wagon Bordeaux", "le wagon Nantes", "le wagon Paris", "le wagon Marseille", "le wagon Lyon"], id: "home_type", prompt: "A sélectionner...", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="panel-heading">
     <h5>   Médias supplémentaires:</h5>
   </div>
   <div class="row">
     <div class="col-md-4">
       <div class="form-group">
        <span class="btn btn-default btn-file">
          <i class = "fa fa-cloud-upload fa-lg"></i> Téléchargez vos photos !
          <%= file_field_tag "images[]", type: :file, multiple: true %>
        </span>
      </div>
    </div>
  </div>
  <font color="#555555" face="Arial, Helvetica Neue, Helvetica, Tahoma, sans-serif"></font>
  <div id="photos">
    <%= render 'photos/list' %>
  </div>
  <div class="panel-heading">
    <h5>  Visibilité du projet:</h5>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.check_box :status %> Dépublier le projet
      </div>
    </div>
    <br>
    <br>
    <div class="actions">
      <%= f.submit "Valider le projet", class: 'btn btn-md btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
</div>

<script type="text/javascript"
src="https://maps.googleapis.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_JAVASCRIPT_KEY']}"></script>
